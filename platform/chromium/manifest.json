{
    "manifest_version": 3,
    "name": "OpenCheck",
    "version": "1.0.0",
    "description": "Displays OpenCheck identity verification on profiles and timelines on twitter.com",
    "permissions": [
        "webRequest"
    ],
    "host_permissions": [
        "https://api.opencheck.is/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*"],
            "js": ["opencheck.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "192": "icons/opencheck-192.png"
    }
}
